<UserControl x:Class="todolist.TaskPanelViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:todolist"
             mc:Ignorable="d">
    <!-- Wrapper that shows filtered tasks -->
    <ScrollViewer x:Name="MyScrollViewer" VerticalScrollBarVisibility="Auto">
        <WrapPanel Name="TaskPanelsContainer" MinWidth="120" Width="{Binding ElementName=MyScrollViewer, Path=ViewportWidth}">

        </WrapPanel>
    </ScrollViewer>
</UserControl>
