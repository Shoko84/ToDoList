<UserControl x:Class="todolist.TaskPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:todolist"
             mc:Ignorable="d">
    <Grid Name="TaskGrid" Background="#2e81b7" Width="168" Height="224" Margin="15"
            UIElement.PreviewMouseLeftButtonDown="EditTaskClick" MouseEnter="HoveringEnterTask" MouseLeave="HoveringLeaveTask">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Name="TextTitle" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="#ecf0f1"
                   Padding="10" TextTrimming="WordEllipsis" FontSize="14"/>
        <TextBlock Grid.Row="1" Name="TextContent" TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="#ecf0f1"
                   Padding="10" TextTrimming="WordEllipsis"/>
    </Grid>
</UserControl>
